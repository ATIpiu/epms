<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.epms.dao.salaryDao.SalaryDao">
    <insert id="insertIntoSalary" parameterType="com.epms.entity.Salary"
            useGeneratedKeys="true">
        insert into salary(sId,pId,sQuality,sSalaryTime)
        values (${sId},${pId},${sQuality},#{sSalaryTime})
    </insert>

    <delete id="deleteSalary"  parameterType="com.epms.entity.Salary">
        delete from salary where sId=${sId} and pId=${pId} and sSalaryTime=#{sSalaryTime}
    </delete>

    <update id="updateSalary" parameterType="com.epms.entity.Salary">
        update salary set sCheckIn=${sCheckIn},sEvaluation=#{sEvaluation}
        where sId=${sId} and pId=${pId} and sSalaryTime=#{sSalaryTime}
    </update>

    <select id="querySalaryBysId" resultType="com.epms.entity.Salary" parameterType="int">
        select * from salary where sId=${sId}
    </select>

    <select id="querySalaryBypId" resultType="com.epms.entity.Salary" parameterType="int">
        select * from salary where pId=${pId}
    </select>

    <select id="queryAllSalarys" resultType="com.epms.entity.Salary">
        select * from salary
    </select>


</mapper>